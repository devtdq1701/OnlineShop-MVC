@model Model.EF.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title{
    <title>@Model.Title</title>
}
@section css{
    <link rel="stylesheet" type="text/css" href="/Assets/Client/styles/product_styles.css">
    <link rel="stylesheet" type="text/css" href="/Assets/Client/styles/product_responsive.css">
}
@section js {
    <script src="/Assets/Client/js/product_custom.js"></script>
    <script src="/Assets/Client/js/jquery.ez-plus.js"></script>
    <script>
        $("#zoom-img").ezPlus();
    </script>
}
<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Selected Image -->
            <div class="col-lg-6 order-lg-2 order-1">
                <div class="image_selected"><img src="@Model.Images" alt="" id="zoom-img"></div>
            </div>

            <!-- Description -->
            <div class="col-lg-6 order-3">
                <div class="product_description">
                    <div class="product_category">Laptops</div>
                    <div class="product_name">@Model.Title</div>
                    <div class="product_text">@Html.Raw(Model.Description)</div>
                    <div class="order_info d-flex flex-row">
                        <form action="#">
                            <div class="clearfix status_stock">

                                <span class="status status1"><i aria-hidden="true" class="fa fa-circle"></i>Còn hàng</span>
                                <div class="product_quantity clearfix">
                                    <span>Số lượng: </span>
                                    <input id="quantity_input" type="number" value="1" min="1" max="@Model.Quantity">
                                    <div class="quantity_buttons">
                                        <div id="quantity_up" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
                                        <div id="quantity_down" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
                                    </div>
                                </div>

                            </div>

                            <div class="product_price">
                                <div class="price">@(Model.Price.Value.ToString("N0"))đ</div>
                                <div class="old_price">@(Model.OldPrice)đ</div>
                            </div>
                            <div class="button_container">
                                <button type="button" class="button cart_button">Thêm vào giỏ hàng</button>
                                <div class="product_fav"><i class="fas fa-heart"></i></div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Product Detail-->
<div class="container">
    <div class="row">
        <div class="col">
            <div class="block__header"><span class="block__header__title">THÔNG TIN SẢN PHẨM</span></div>
            <div class="product-detail col-md-12 col-xs-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="desc-tab" data-toggle="tab" href="#chitiet" role="tab" aria-controls="chitiet" aria-selected="true">Mô tả sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="char-tab" data-toggle="tab" href="#dacdiem" role="tab" aria-controls="dacdiem" aria-selected="false">Đặc điểm nổi bật</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="guar-tab" data-toggle="tab" href="#baohanh" role="tab" aria-controls="baohanh" aria-selected="false">Thông tin bảo hành</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="container tab-pane fade show active" id="chitiet" role="tabpanel" aria-labelledby="desc-tab">@Html.Raw(Model.Detail)</div>
                    <div class="container tab-pane fade" id="dacdiem" role="tabpanel" aria-labelledby="char-tab">...</div>
                    <div class="container tab-pane fade" id="baohanh" role="tabpanel" aria-labelledby="guar-tab">...</div>
                </div>
            </div>
        </div>
    </div>
</div>